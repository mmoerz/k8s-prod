#/bin/bash

source ./__CONFIG

K3SSERVICEENV=/etc/systemd/system/k3s.service.env

if [ -f ${K3SSERVICEENV} ] ; then
  echo "k3s systemd service env file exists: ${K3SSERVICEENV}"
else
  echo "installing k3s systemd service env file: "
  mkdir -p `basename "${K3SSERVICEENV}"`
  cat > ${K3SSERVICEENV} <<EOF
CMD_K3S_EXEC="server"
EOF
fi

systemctl enable k3s.service
systemctl start k3s.service

